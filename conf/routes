# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Task Pages
GET /tasks controllers.Application.tasks
POST /tasks controllers.Application.newTask
POST /tasks/:id/delete controllers.Application.deleteTask(id: Long)

# GET /test/:message controllers.Application.test(message: String)

# User Pages
GET /user/signup controllers.UserController.register
GET /user/signup controllers.UserController.signup
GET /user/login controllers.UserController.login
GET /user/login controllers.UserController.authenticate
GET /user/logout controllers.UserController.logout
GET /user        controllers.UserController.index